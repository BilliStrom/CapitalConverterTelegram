{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["api/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/bot.py",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "/api/bot.py",
      "methods": ["GET"]
    }
  ]
}
